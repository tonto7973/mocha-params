{
  "name": "mocha-using",
  "version": "1.0.0",
  "description": "Test cases for Mocha",
  "author": "Ondrej Urik",
  "license": "MIT",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run lint && npm run test && tsc -p tsconfig.build.json --listEmittedFiles true --diagnostics true && cp src/index.d.ts dist/",
    "clean": "rimraf dist && rimraf .nyc_output && rimraf coverage",
    "lint": "tslint -p tsconfig.json",
    "tdd": "npm run clean && mocha -r .mocha/config.js -r ts-node/register src/**/*.spec.ts --watch-extensions ts --watch",
    "test": "nyc mocha -r .mocha/config.js -r ts-node/register -r source-map-support/register src/**/*.spec.ts"
  },
  "keywords": [
    "test",
    "case",
    "mocha",
    "tests"
  ],
  "devDependencies": {
    "@types/chai": "4.1.3",
    "@types/chai-as-promised": "7.1.0",
    "@types/chai-spies": "0.0.1",
    "@types/mocha": "5.2.0",
    "@types/rewire": "2.5.28",
    "chai": "4.1.2",
    "chai-as-promised": "7.1.1",
    "chai-spies": "1.0.0",
    "cross-env": "5.1.6",
    "mocha": "5.2.0",
    "nyc": "12.0.1",
    "rewire": "4.0.1",
    "rimraf": "2.6.2",
    "source-map-support": "0.5.6",
    "ts-node": "6.1.0",
    "tslint": "5.10.0",
    "typescript": "2.8.3"
  },
  "peerDependencies": {
    "mocha": "^5.2.0"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "./dist/**/*",
      "./coverage/**/*",
      "./.mocha/**/*",
      "./.nyc_output/**/*",
      "**/*.d.ts",
      "**/*.spec.ts",
      "./src/lib/interfaces/**"
    ],
    "include": [
      "./src/**/*"
    ],
    "all": true,
    "reporter": [
      "text",
      "html"
    ]
  }
}
