{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module":"commonjs",
    "lib": ["es5", "es2015", "dom"],
    "strict": true,
    "sourceMap": true,
    "noImplicitThis": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "files": [
    "./src/index.d.ts",
    "./src/globals.d.ts"
  ],
  "include": [
    "./src/**/*.ts",
    "./e2e/**/*.ts"
  ]
}