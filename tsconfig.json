{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module":"commonjs",
    "lib": ["es5", "es2015", "dom"],
    "strict": true,
    "sourceMap": true,
    "noImplicitThis": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "typeRoots": [
      "node_modules/@types",
      ".mocha"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./src/index.d.ts"
  ]
}